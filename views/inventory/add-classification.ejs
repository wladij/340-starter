<main class="form-container">
  <h1><%= title %></h1>

  <% if (errors && errors.length) { %>
    <ul class="errors">
      <% errors.forEach(e => { %> <li><%= e.msg %></li> <% }) %>
    </ul>
  <% } %>

  <form action="/inv/add-classification" method="POST" id="inventoryClassificationForm" novalidate>
    <label for="classification_name">Classification name</label>
    <input id="classification_name" name="classification_name" type="text"
           pattern="[A-Za-z0-9]+" required title="Letters and numbers only, no spaces" />
    <button type="submit">Add Classification</button>
  </form>
</main>